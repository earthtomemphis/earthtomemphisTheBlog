<% layout('layouts/boilerplate') %>
<div class="row">
	<h1 class="text-center">Edit a YouTube Video</h1>
	<div class="col-6 offset-3">
		<form
			action="/youtube/<%= youtubeLink.id %>/?_method=PATCH"
			method="POST"
			novalidate
			class="validated-form"
		>
			<div class="mb-3">
				<label class="form-label" for="url">Enter an URL</label>
				<input
					type="text"
					class="form-control"
					name="youtube[url]"
					id="url"
					placeholder="url"
					value="<%= youtubeLink.url %>"
					required
				/>
				<div class="valid-feedback">Looks good!</div>
			</div>
			<div class="mb-3">
				<label class="form-label" for="body">Enter a Description</label>
				<textarea
					type="text"
					class="form-control"
					name="youtube[description]"
					id="description"
					placeholder="description"
					required
				>
                <%= youtubeLink.description %></textarea
				>
				<div class="valid-feedback">Looks good!</div>
			</div>
			<div class="mb-3">
				<button class="btn btn-success">Edit YouTube Video</button>
			</div>
			<a href="/youtube/<%= youtubeLink.id %>">Back to Video</a>
		</form>
	</div>
</div>
