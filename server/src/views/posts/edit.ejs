<% layout('layouts/boilerplate') %>
<div class="row">
	<h1 class="text-center">Edit Blog Post</h1>
	<div class="col-6 offset-3">
		<form action="/posts/<%= post.id %>/?_method=PATCH" method="post">
			<div class="mb-3">
				<label class="form-label" for="title">Enter a Title</label>
				<input
					type="text"
					class="form-control"
					name="post[title]"
					id="title"
					value="<%= post.title %>"
				/>
			</div>
			<div class="mb-3">
				<label class="form-label" for="body">Enter a Body</label>
				<textarea
					type="text"
					class="form-control"
					name="post[body]"
					id="body"
				>
            <%= post.body %>
            </textarea
				>
			</div>
			<div class="mb-3">
				<button class="btn btn-success">Edit Post</button>
			</div>
		</form>
		<a href="/posts/<%= post.id %>">Back to Post</a>
	</div>
</div>
